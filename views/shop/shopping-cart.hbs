{{#if products}}
<div class="row mt-2 justify-content-center">
    <div class="m-3 col-sm-6 col-md-4">
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item">
                <strong>{{this.item.title}}</strong>
                <span class="label label-success">${{this.price}}</span>

                <div class="btn-group dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        Action
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="#">Reduce by 1</a></li>
                        <li><a class="dropdown-item" href="#">Remove All</a></li>
                    </ul>
                </div>
                <span class="badge bg-secondary justify-content-end"> {{this.qty}}</span>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row mt-2 justify-content-center">
    <div class="m-3 col-sm-6 col-md-4" style="width: 18rem;">
        <strong>Total: ${{totalPrice}}</strong>
    </div>
</div>
<hr>
<div class="row mt-2 justify-content-center">
    <div class="m-3 col-sm-6 col-md-4" style="width: 18rem;">
        <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        {{!-- <button type="button" class="btn btn-success">Checkout</button> --}}
    </div>
</div>
{{else}}
<div class="row mt-2 justify-content-center">
    <div class="m-3 col-sm-6 col-md-4" style="width: 18rem;">
        <h2>No Items in Cart</h2>
    </div>
</div>
{{/if}}