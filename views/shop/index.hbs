{{# each products }}
<div class="row mt-2">
    {{# each this}}
    <div class="m-3 col-sm-6 col-md-4 card" style="width: 18rem;">
        <img src="{{this.imagePath }}" class="card-img-top img-fluid" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">${{this.price}}</h6>
            <p class="card-text">{{this.description}}</p>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Shopping Cart</a>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}